% Coding environments
\lstnewenvironment{pythonCode}[1][language=python]{
	\lstset{frame=none,
			backgroundcolor=\color{gray!10},
			basicstyle=\ttfamily\color{RedOrange},
			autogobble,
			tabsize=4,
			commentstyle=\color{RedOrange!50!black},
			showstringspaces=false,
			language=python,
			upquote=true,
			#1
	}}{}
\lstnewenvironment{plainCode}[1][language=python]{
	\lstset{frame=none,
			backgroundcolor=\color{gray!10},
			basicstyle=\ttfamily,
			autogobble,
			tabsize=4,
			commentstyle=\itshape,
			keywordstyle=\color{black},
			stringstyle=\color{black},
			numberstyle=\color{black},
			showstringspaces=false,
			language=python,
			upquote=true,
			#1
	}}{}
\lstdefinestyle{pseudo}{%
			basicstyle=\ttfamily\color{RedOrange},
			autogobble,
			tabsize=4,
			upquote=true,
			showstringspaces=false,
			commentstyle=,
			showstringspaces=false,
			stringstyle=,
			numbers=none,
			numberstyle=,
			literate=,
			columns=spaceflexible,
			moredelim=[is][\color{RoyalBlue}\itshape\rmfamily]{|}{|},
}
\newcommand{\inlinePython}[1]{\textcolor{RedOrange}{\texttt{#1}}}

% TA environments
\newcommand{\tanotes}[1]{
	\iftoggle{forTA}{
		\par
		\begin{tanotecontent}
			#1
		\end{tanotecontent}
		%\begin{center}
			%\framebox[6.5in]{\parbox{6.25in}{{\Large \textbf{TA Notes}:}\\ #1}}
		%\end{center}
	}%
}

