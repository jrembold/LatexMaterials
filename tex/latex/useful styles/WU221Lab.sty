% Coding environments
\lstnewenvironment{pythonCode}[1][language=python]{
	\lstset{frame=none,
			backgroundcolor=\color{gray!10},
			basicstyle=\ttfamily\color{RedOrange},
			autogobble,
			tabsize=4,
			commentstyle=\color{RedOrange!50!black},
			showstringspaces=false,
			language=python,
			upquote=true,
			#1
	}
}{}

% This style removes color
\lstnewenvironment{plainCode}[1][language=python]{
	\lstset{frame=none,
			backgroundcolor=\color{gray!10},
			basicstyle=\ttfamily,
			autogobble,
			tabsize=4,
			commentstyle=\itshape,
			keywordstyle=\color{black},
			stringstyle=\color{black},
			numberstyle=\color{black},
			showstringspaces=false,
			language=python,
			upquote=true,
			#1
	}
}{}

% This style lets you use pipe symbols (|) as delimiters inside which
% you can place pseudo code
\lstdefinestyle{pseudo}{%
			basicstyle=\ttfamily\color{RedOrange},
			autogobble,
			tabsize=4,
			upquote=true,
			showstringspaces=false,
			commentstyle=,
			showstringspaces=false,
			stringstyle=,
			numbers=none,
			numberstyle=,
			literate=,
			columns=spaceflexible,
			moredelim=[is][\color{RoyalBlue}\itshape\rmfamily]{|}{|},
}
