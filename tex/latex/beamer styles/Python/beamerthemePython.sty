\newcommand{\exsol}[1]{
	\ifsol{%
	\begin{tikzpicture}[remember picture, overlay]
		\node<+->[anchor=south east, xshift=-1mm, yshift=4mm, font=\scriptsize] at (current page.south east) {\textcolor{Orange}{\textbf{Solution:}} #1};
	\end{tikzpicture}
	}\fi
	\pnote{Solution: #1}
}

