\mode<presentation>

% Any required packages
\RequirePackage{tikz}
\RequirePackage[duration=60, fontsize=24]{pdfpcnotes}

% Settings
\useinnertheme{rounded}
\useoutertheme{Astro}
\usecolortheme{Astro}

\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{blocks}[rounded][shadow=false]
\setbeamertemplate{enumerate items}[default]

% Polling environment
\newenvironment{poll}{%
	\begin{enumerate}[A)]
	}{%
	\end{enumerate}
}

% Solutions class option
\newif\ifsol
\solfalse
\DeclareOption{sols}{\soltrue}
\ProcessOptions

\newcommand{\exsol}[1]{
	\ifsol{%
	\begin{tikzpicture}[remember picture, overlay]
		\node<+->[anchor=south east, xshift=-7mm, yshift=5mm, font=\scriptsize] at (current page.south east) {\textbf{Solution:} #1};
	\end{tikzpicture}
	}\fi
	\pnote{Solution: #1}
}

% Nicer link command
\newcommand{\link}[2]{%
	\href{#1}{\color{Orange}#2}%
}
\mode<all>
